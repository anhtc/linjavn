@using LinJas.Common
<div id="slide-show" class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div id="carousel-techsoftplus" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-techsoftplus" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-techsoftplus" data-slide-to="1"></li>
                    <li data-target="#carousel-techsoftplus" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img data-src="@Url.Content("~/Asset/images/slide/slider-bg3.jpg")" class="lazyload img-responsive" alt="" />
                    </div>
                    <div class="item">
                        <img data-src="@Url.Content("~/Asset/images/slide/slider-bg3.jpg")" class="lazyload" alt=""/>
                    </div>
                    <div class="item">
                        <img data-src="@Url.Content("~/Asset/images/slide/slider-bg3.jpg")" class="lazyload" alt=""/>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-techsoftplus" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
                <a class="right carousel-control" href="#carousel-techsoftplus" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>
</div>

